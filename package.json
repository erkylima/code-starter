{
  "name": "CodeStarter",
  "displayName": "CodeStarter",
  "description": "Gerador de hipercontexto",
  "version": "0.0.2",
  "author": "Ã‰rky Lima",
  "publisher": "CodeStarterDev",
  "engines": {
    "vscode": "^1.95.0"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeStarterExplorer",
          "title": "Code Starter",
          "icon": "resources/logo.png"
        }
      ]
    },
    "views": {
      "codeStarterExplorer": [
        {
          "id": "codeStarterExplorer",
          "name": "Code Starter"
        }
      ]
    },
    "commands": [
      {
        "command": "secretsManager.openSecretsPanel",
        "title": "Open Secrets Panel"
      },
      {
        "command": "fileExplorer.refresh",
        "title": "Refresh File Explorer"
      },
      {
        "command": "fileExplorer.generateOutput",
        "title": "Generate Code"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fileExplorer.generateOutput",
          "when": "view == codeStarterExplorer",
          "group": "navigation",
          "icon": "$(gear)" 
        },
        {
          "command": "secretsManager.openSecretsPanel",
          "when": "view == codeStarterExplorer",
          "group": "navigation"
        }
        ,
        {
          "command": "fileExplorer.refresh",
          "when": "view == codeStarterExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codeStarterExplorer",
    "onCommand:secretsManager.openSecretsPanel"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.8"
  }
}
